/* components/books/index.wxss */
.container{
  display: flex;
  flex-direction: column;
  width: 240rpx;
  height: 360rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
  align-content: space-around;
  position: relative;
  margin-top:30rpx;
}
.container image{
  width: 100%;
  height: 100%;
  border-radius: 2px;
}
.describe{
  position: absolute;
  background: #fff;
  width: 100%;
  bottom: 0;
  padding: 5rpx 10rpx 8rpx 15rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  border-bottom-right-radius: 2px;
  border-bottom-left-radius: 2px;

}
.title{
  margin-top:10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden
}
.author{
  font-size: 20rpx;
  color:#999999;
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.like{
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}