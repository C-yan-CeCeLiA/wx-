<view hidden='{{hidden}}' class='contaniner'>
  <image class="music_img {{isPlay ? 'rotation' : ''}}"  src='{{img}}'></image>
  <image class='play_img' bindtap='onPlay' src="{{isPlay ? playSrc : pauseSrc}}"></image>
  <image class='tag' src='images/music@tag.png'></image>
  <text  class='content'>{{content}}</text>
</view>