<!--components/search/index.wxml-->
<view class='container' hidden='{{searching}}'>
   <view class="header">
    <view class="search-container">
      <image class="icon" src="images/search.png" />
      <input placeholder-class='in-bar' placeholder='书籍名' class='bar' value="{{q}}" auto-focus="true" />
      <image  class="cancel-img" src="images/cancel.png" />
    </view>
    <view class='cancel' bindtap='oncancel'>取消</view>
  </view>
</view>
